{
  "compilerOptions": {
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "target": "es6",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "baseUrl": "src",
    "paths": {
      "bootstrap/*": [
        "bootstrap/*"
      ],
      "data/*": [
        "data/*"
      ],
      "config/*": [
        "config/*"
      ],
      "tests/*": [
        "tests/*"
      ],
      "helpers/*": [
        "helpers/*"
      ]
    }
  }
}
